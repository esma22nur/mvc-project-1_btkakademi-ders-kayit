@model candidate
<div class="display-6">
	Apply
</div>
<form method="post" asp-action="apply">
	<div class="text-danger" asp-validation-summary="All"> </div>
	<div class="form-group my-2 ">
	<label>Email</label>
	<input name="email" class="form-control"/>
	</div>

	<div class="form-group my-2">
		<label>First name</label>
		<input name="Name" class="form-control" />
	</div

	<div class="form-group my-2">
		<label>Last Name</label>
		<input name="Last Name" class="form-control" />
	</div>

	<div>
		<label>Age</label>
		<select name="Age " class="form-control"> 
			<option value="18">18</option>
			<option value="19">19</option>
			<option value="20">20</option>
			<option value="21">21</option>
			<option value="22">22</option>
			<option value="23">23</option>
			</select>
	</div>

	<fieldset>
		<legend>Select one course</legend>
		<p>
			<input id="mvc" type="radio" name="selected course" value="asp.netcoremvc" checked />
			<label>ASP.NET Core MVC</label>
		</p>
		<p>
			<input id="api" type="radio" name="selected course" value="asp.netcoreAPI" />
			<label>ASP.NET Core API</label>
		</p>
		<p>
			<input id="C#" type="radio" name="selected course" value="C#" />
			<label>C#</label>
		</p>
	</fieldset>

	<div>
		<button class="btn btn-primary" type="submit">Apply</button>
		<button class="btn btn-warning" href="#"HOME></button>
	</div>
</form>