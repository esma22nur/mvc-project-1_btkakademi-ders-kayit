@model candidate
<div>
	<h3 class="display-4">Congratulations @Model.name </h3>
	<p class="lead"> Your application has been <mark>accepted.</mark></p>
	<p class="lead">Many thanks for your interest</p>
	<hr />
	<blockquote class="blockquote"> You have enrolled to @Model.selectedcourse course</blockquote>
	<p class="text-muted"> You applied at @Model.applyat</p>
	<div class="btn-group">
		<a class="btn btn-outline-success" asp-action="Index">application</a>
		<a class="btn btn-success" asp-action="Index" asp-controller="Home">Home</a>
	</div>
</div>
